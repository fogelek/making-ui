---
layout: layouts/layout.njk
---
<ul class="posts">
{%- for post in collections.post -%}
    <li>
        <a href="{{ post.url }}">
            <article-box animate>
              <h2>{{ post.data.title }}</h2>
              <span class="lead">{{ post.data.lead }}</span>
            </article-box>
        </a>
    </li>
{%- endfor -%}
</ul>

